@article{tuck:2013:transcriptomewide,
  file={/Users/Tito/Downloads/1-s2.0-S0092867413009574-main.pdf;/Users/Tito/Documents/ReadCube Media/Cell 2013 Tuck AC - supplement.pdf;/Users/Tito/Documents/ReadCube Media/Cell 2013 Tuck AC - supplement 1.pdf},
