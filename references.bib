  pages={65-74},
  title={Pcf11 is a termination factor in Drosophila that dismantles the elongation complex by bridging the {CTD} of {RNA} polymerase {II} to the nascent transcript.}
}

@article{cui:2008:genes,
  file={/Users/Tito/Documents/ReadCube Media/Cui et al-2008-Proc Natl Acad Sci USA.pdf},
  pmcid={{PMC2571909}},
