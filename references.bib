  title={{PIPE-CLIP:} a comprehensive online tool for {CLIP-seq} data analysis.}
}

@article{koodathingal:2010:deah,
  file={/Users/Tito/Documents/ReadCube Media/Koodathingal et al-2010-Mol Cell.pdf;/Users/Tito/Documents/ReadCube Media/Koodathingal et al-2010-Mol Cell - supplement.pdf},
  pmcid={{PMC3722364}},
