  title={Nucleosome organization in the vicinity of transcription factor binding sites in the human genome.}
}

@article{lambert:2014:rna,
  file={/Users/Tito/Documents/ReadCube Media/Lambert et al-2014-Mol Cell.pdf;/Users/Tito/Documents/ReadCube Media/Lambert et al-2014-Mol Cell - supplement.pdf;/Users/Tito/Documents/ReadCube Media/Lambert et al-2014-Mol Cell - supplement 1.pdf},
