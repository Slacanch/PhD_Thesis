  pages={851-8},
  title={Bimodal expression of {PHO84} is modulated by early termination of antisense transcription.}
}

@article{heo:2013:rna,
  file={/Users/Tito/Documents/ReadCube Media/Heo et al-2013-J Biol Chem.pdf},
